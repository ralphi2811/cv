---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CV de RaphaÃ«l Auberlet" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/cv/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      /* Print styles - strict no-break inside elements */
      @media print {
        @page {
          size: A4;
          margin: 0.5cm 0.8cm;
        }

        * {
          -webkit-print-color-adjust: exact;
          print-color-adjust: exact;
        }

        body {
          margin: 0;
          padding: 0;
          font-size: 10pt;
          line-height: 1.3;
        }

        /* Compact container */
        main {
          padding: 0 !important;
        }

        #cv-content {
          padding: 0.5rem !important;
          box-shadow: none !important;
        }

        /* Compact header */
        header {
          margin-bottom: 0.5rem !important;
        }

        h1 {
          font-size: 20pt !important;
          margin-bottom: 0.25rem !important;
        }

        h2 {
          font-size: 14pt !important;
          margin-bottom: 0.3rem !important;
          margin-top: 0.5rem !important;
          padding-bottom: 0.1rem !important;
        }

        h3 {
          font-size: 11pt !important;
          margin-bottom: 0.15rem !important;
        }

        p, span, div {
          font-size: 9pt !important;
          line-height: 1.3 !important;
        }

        /* Compact sections */
        section {
          margin-bottom: 0.5rem !important;
        }

        .space-y-6 > * + * {
          margin-top: 0.4rem !important;
        }

        .space-y-4 > * + * {
          margin-top: 0.3rem !important;
        }

        .space-y-2 > * + * {
          margin-top: 0.15rem !important;
        }

        .space-y-1 > * + * {
          margin-top: 0.1rem !important;
        }

        /* Compact work items */
        .work-item,
        .education-item,
        .project-item {
          margin-bottom: 0.4rem !important;
        }

        /* Compact skills */
        .skill-item {
          margin-bottom: 0.3rem !important;
        }

        .skill-item h3 {
          margin-bottom: 0.2rem !important;
        }

        /* Compact badges and tags */
        .flex.flex-wrap.gap-2,
        .flex.flex-wrap.gap-3,
        .flex.flex-wrap.gap-4 {
          gap: 0.15rem !important;
        }

        .px-3 {
          padding-left: 0.4rem !important;
          padding-right: 0.4rem !important;
        }

        .py-1 {
          padding-top: 0.15rem !important;
          padding-bottom: 0.15rem !important;
        }

        .px-2 {
          padding-left: 0.3rem !important;
          padding-right: 0.3rem !important;
        }

        /* Compact lists */
        ul {
          margin-top: 0.2rem !important;
          margin-bottom: 0.2rem !important;
        }

        li {
          margin-bottom: 0.1rem !important;
          line-height: 1.3 !important;
        }

        /* Prevent page breaks inside these elements */
        .work-item,
        .education-item,
        .skill-item,
        .project-item,
        .no-break {
          page-break-inside: avoid;
          break-inside: avoid;
        }

        /* Control page breaks */
        h1, h2, h3, h4, h5, h6 {
          page-break-after: avoid;
          break-after: avoid;
        }

        /* Hide non-essential elements for print */
        .no-print {
          display: none !important;
        }

        /* Remove shadows and adjust colors for print */
        .shadow,
        .shadow-lg,
        .shadow-md {
          box-shadow: none !important;
        }

        /* Remove rounded corners for print */
        .rounded,
        .rounded-lg,
        .rounded-md,
        .rounded-full {
          border-radius: 0.15rem !important;
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
